@using WinTzToMoment.Controllers
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Windows To Moment.js Timezone Coverter">
        <meta name="author" content="ScreenshotMonitor">
    
        <title>Windows To Moment.js Timezone Coverter</title>
      
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"> </script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"> </script>
        <![endif]-->
        
        <style>
            body { margin-top: 45px; }
        </style>
    </head>

    <body>

        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="https://www.nuget.org/packages/Pranas.WindowsTimeZoneToMomentJs/">WindowsTimeZoneToMomentJs </a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="https://github.com/ScreenshotMonitor/WindowsTimeZoneToMomentJs">GitHub</a></li>
                        <li><a href="https://www.nuget.org/packages/Pranas.WindowsTimeZoneToMomentJs/">NuGet</a></li>
                        <li><a href="http://screenshotmonitor.com/blog/">Blog</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <h1>Windows To Moment.js Timezone Coverter</h1>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-6">
                    <form role="form">
                        <div class="form-group">
                            <label for="winTz">Windows Time Zone</label>
                            <select  class="form-control" id="winTz">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="dateTime">UTC Date Time <small class="text-muted">(@DefaultController.DateTimeFmt)</small> </label>
                            <input type="text" class="form-control" id="dateTime" placeholder="@DefaultController.DateTimeFmt" value="@(new DateTimeOffset(DateTime.UtcNow).ToString("yyyy-MM-ddTHH:mm:ssK")) ">
                        </div>
                        
                        <a href="#" id="convert" class="btn btn-default">Convert</a>
                        
                        <div class="form-group" id="result" style="display: none;">
                            <p>
                                <b>Converted by WindowsTimeZoneToMomentJs (client side)</b><br/> 
                                <span id="by-client"></span> <br/><br/>
                                
                                <b>Converted by TimeZoneInfo.ConvertTimeFromUtc (server side)</b> <br/><span id="by-server" data-url="@Url.Action("Convert")"></span> <br/>

                            </p>
                            <h2 id="ok" class="res-marker" style="color: green;">
                                OK
                            </h2>
                            <h2 id="fail" class="res-marker" style="color: red;">
                                FAIL
                            </h2>
                        </div>
                       
                    </form>
                </div>
            </div>
        </div><!-- /.container -->


        <!-- Bootstrap core JavaScript
            ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"> </script>
    
        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"> </script>
        <script src="http://underscorejs.org/underscore-min.js"> </script>
        <script src="http://momentjs.com/downloads/moment.min.js"> </script>
        <script src="http://momentjs.com/downloads/moment-timezone-with-data.min.js"> </script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.2.5/moment-timezone-utils.min.js"></script>
        <script src="@Url.Action("WindowsTimeZoneToMomentJs")"> </script>
        <script src="~/Scripts/main.js"> </script>
    </body>
</html>